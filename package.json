{
  "name": "echo-social-messenger",
  "version": "2.0.0",
  "description": "Echo Firebase-powered social messenger platform",
  "private": true,
  "scripts": {
    "build": "cd frontend && npm run build",
    "dev": "cd frontend && npm run dev",
    "install-all": "npm install && cd frontend && npm install && cd ../functions && npm install",
    "firebase-deploy": "npm run build && firebase deploy",
    "firebase-serve": "firebase serve",
    "firebase-emulators": "firebase emulators:start",
    "functions-deploy": "firebase deploy --only functions",
    "hosting-deploy": "npm run build && firebase deploy --only hosting"
  },
  "keywords": [
    "social-messenger",
    "firebase",
    "react",
    "real-time-chat",
    "whatsapp-clone",
    "facebook-features"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "frontend",
    "functions"
  ]
}